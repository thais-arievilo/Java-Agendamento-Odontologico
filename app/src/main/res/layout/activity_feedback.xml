<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaria"
    tools:context=".Feedback">

    <Button
        android:id="@+id/BotaoVoltarFeedback"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:background="@drawable/voltar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        app:backgroundTint="@null"/>
    <View
        android:layout_width="350dp"
        android:layout_height="541dp"
        android:layout_gravity="center"
        android:background="@color/view_feedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="220dp"
        android:fontFamily="@font/kumbh_sans"
        android:text="REGISTRE O SEU FEEDBACK"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/Classificacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:numStars="5"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/amarelo_metalico"
        android:secondaryProgressTint="@color/amarelo_metalico" />

    <Button
        android:id="@+id/BotaoEnviarFeedback"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/kumbh_sans"
        android:text="Enviar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/cinza" />

    <EditText
        android:id="@+id/Comentario"
        android:layout_width="323dp"
        android:layout_height="203dp"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:background="@drawable/border_radius_box"
        android:hint="Escreva aqui:"
        android:lines="5"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

</FrameLayout>